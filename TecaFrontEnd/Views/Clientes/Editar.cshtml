@model ClienteVm
@{
}


   <h4 class="center">Editar Cliente</h4>

@using (Html.BeginForm("Editar","Clientes",FormMethod.Post,new {id="formulario"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(f=>f.Id)
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="modal-body">

        <div class="form-horizontal">
           
        
            <div class="form-group">
                @Html.LabelFor(m => Model.NumeroIdentificacion, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NumeroIdentificacion, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NumeroIdentificacion)
                    </div>
                </div>
            </div>

            <div class="form-group">
                
               
                    @Html.LabelFor(m => Model.Nombre, new { @class = "control-label col-sm-3" })
               
              
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Nombre, new {@class = "form-control required"})
                    <div>
                        @Html.ValidationMessageFor(m => m.Nombre)
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                
               
                    @Html.LabelFor(m => Model.ApellidoPaterno, new { @class = "control-label col-sm-3" })
               
              
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.ApellidoPaterno, new {@class = "form-control required"})
                    <div>
                        @Html.ValidationMessageFor(m => m.ApellidoPaterno)
                    </div>
                </div>
            </div>
            
            <div class="form-group">               
               
                    @Html.LabelFor(m => Model.ApellidoMaterno, new { @class = "control-label col-sm-3" })              
              
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.ApellidoMaterno, new {@class = "form-control required"})
                    <div>
                        @Html.ValidationMessageFor(m => m.ApellidoMaterno)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div >
        <span id="progress" class="text-center" style="display: none;">
            <img src="@Url.Content("~/images/wait.gif")" alt="wait" />
            Wait..
        </span>   
        <input class="btn btn-success float-right" type="submit"  value="Guardar" />
   
    </div> 

}
  @Html.ActionLink("Regresar", "Index", "Clientes",null,new { @class="btn btn-sm btn-info", role="button"})          
     